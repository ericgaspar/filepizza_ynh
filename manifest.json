{
    "name": "File Pizza",
    "id": "filepizza",
    "packaging_format": 1,
    "description": {
        "en": "Online editor providing collaborative editing in real-time.",
        "fr": "Éditeur en ligne fournissant l'édition collaborative en temps réel."
    },
    "version": "1.8.7~ynh1",
    "url": "https://etherpad.org/",
    "license": "Apache-2.0",
    "maintainer": {
        "name": "eric_G"
    },
    "requirements": {
        "yunohost": ">= 4.0.0"
    },
    "multi_instance": true,
    "services": [
        "nginx"
    ],
    "arguments": {
        "install" : [
            {
                "name": "domain",
                "type": "domain",
                "ask": {
                    "en": "Choose a domain name for filepizza",
                    "fr": "Choisissez un nom de domaine pour filepizza"
                },
                "example": "example.com"
            },
            {
                "name": "path",
                "type": "path",
                "ask": {
                    "en": "Choose a path for filepizza",
                    "fr": "Choisissez un chemin pour filepizza"
                },
                "example": "/etherpad",
                "default": "/etherpad"
            },
            {
                "name": "is_public",
                "type": "boolean",
                "ask": {
                    "en": "Is it a public application?",
                    "fr": "Est-ce une application publique ?"
                },
                "help": {
                    "en": "If enabled, Etherpad will be accessible by people who do not have an account. This can be changed later via the webadmin.",
                    "fr": "Si cette case est cochée, Etherpad sera accessible aux personnes n’ayant pas de compte. Vous pourrez changer ceci plus tard via la webadmin."
                },
                "default": true
            }
        ]
    }
}
